
@import '../../style/variables';
@import '../../style/mixins';

.Player {

  &-render {
    position: relative;
    width: playerSize;
    height: playerSize;
  }

  &-partition {
    width: playerSize;
    height (playerSize/3);
    margin-top: _margin*3;
  }

  &-timer {
    position: absolute;
    right: _margin;
    bottom: _margin;
    font-size: 2em;
    letter-spacing: 1px;
    color: fontColorSecondary;
    font-family: 'circularstd-bold', sans-serif;
  }

  &-overlay {
    position: relative;
    overlay();
    background-color: transparent;
    cursor: pointer;
  }

  &-button {
    center();
  }

}
