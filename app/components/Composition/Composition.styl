
@import '../../style/variables';

compositionWidth = 280px;
headerHeight = 40px;

.Composition {
  width: compositionWidth;
  margin-bottom: _margin*2;
  display: flex;
  flex-direction: column-reverse;
  cursor: pointer;

  &-header {
    height: headerHeight;
    margin-top: _margin;
    padding: _margin*0.5 0;
    border-top: 2px solid lineColor;
    display: flex;
    justify-content: space-between;
    align-items: top;
  }

  &-detail {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  &-description {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100%;
  }

  &-date, &-description {
    width: 50%;
  }

  &-icon {
    margin-right: _margin*0.5;
    &_note {
      height: headerHeight*0.6;
    }
  }

  &-jacket {
    width: compositionWidth;
    height: compositionWidth;
  }

  &-date {
    font-size: 0.7em;
    text-align: right;
  }
}
