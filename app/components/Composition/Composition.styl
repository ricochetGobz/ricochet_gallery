
@import '../../style/variables';
@import '../../style/mixins';

compositionWidth = 280px;

.Composition {
  width: compositionWidth;
  margin: _margin _margin*0.5;
  display: flex;
  flex-direction: column-reverse;
  cursor: pointer;

  // TODO ajouter une class au svg d'office
    svg {
      center();
    }

  // HEADER
  &-header {
    margin-top: _margin;
    padding: _margin*0.5 0;
    border-top: 2px solid lineColor;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  &-detail {
    min-height: _margin*2
    position: relative;
    display: flex;
    flex-direction: column;
    margin-left: _margin*1.5;

    &::after {
      content: '';
      icon(_margin*1.2, 8);
      centerY();
      left: -(_margin*1.5);
    }
  }

  &-title {
    font-size: 0.85em;
    overflow: hidden;
  }

  &-author {
    font-size: 0.75em;
    letter-spacing: 0.2em;
  }

  // JACKET
  &-jacket {
    position: relative;
    width: compositionWidth;
    height: compositionWidth;
  }

  &-overlay {
    overlay();
  }
}
