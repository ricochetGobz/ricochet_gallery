
@import '../../style/variables';
@import '../../style/mixins';

compositionWidth = 280px;

.Composition {
  width: compositionWidth;
  margin-bottom: _margin*2;
  display: flex;
  flex-direction: column-reverse;
  cursor: pointer;

  // HEADER
  &-header {
    margin-top: _margin;
    padding: _margin*0.5 0;
    border-top: 2px solid lineColor;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  &-detail {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  &-title {
    font-size: 0.85em;
    overflow: hidden;
  }

  &-author {
    font-size: 0.75em;
    letter-spacing: 0.2em;
  }

  &-description {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100%;
    width: 70%
    overflow: hidden;
  }

  &-icon {
    margin-right: _margin * 0.5;
    &_note {
      height: _margin * 1.5;
    }
  }

  &-date {
    font-size: 0.75em;
    text-align: right;
  }

  // JACKET
  &-jacket {
    position: relative;
    width: compositionWidth;
    height: compositionWidth;
  }

  &-image {
    width: 100%;
    height: 100%;
  }

  &-overlay {
    overlay();
  }

}
