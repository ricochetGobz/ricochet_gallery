
@import '../../style/variables';
@import '../../style/mixins';

compositionWidth = 280px;

.Composition {
  width: compositionWidth;
  margin: _margin _margin*0.5;
  display: flex;
  flex-direction: column-reverse;
  cursor: pointer;

    svg {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .Gradient {
      transition 0.2

      &_purple {
        background linear-gradient(45deg, #BE87C4, #B2A2DA);
      }

      &_green {
        background linear-gradient(135deg, #AEE6C8, #94DADB);
      }

      &_red {
        background linear-gradient(135deg, #D68598, #D68598);
      }
    }

  // HEADER
  &-header {
    margin-top: _margin;
    padding: _margin*0.5 0;
    border-top: 2px solid lineColor;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  &-detail {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    margin-left: _margin*1.5;

    &::after {
      content: '';
      icon(_margin*1.2, 8);
      centerY();
      left: -(_margin*1.5);
    }
  }

  &-title {
    font-size: 0.85em;
    overflow: hidden;
  }

  &-author {
    font-size: 0.75em;
    letter-spacing: 0.2em;
  }

  // JACKET
  &-jacket {
    position: relative;
    width: compositionWidth;
    height: compositionWidth;
  }

  &-overlay {
    overlay();
  }
}
