


@import '../../style/variables';
@import '../../style/mixins';

.Popup {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: overlayColor;
  z-index: 9999;
  transition: 0.2s;
  opacity: 0;

  &_hidden {
    pointer-events: none;
  }

  &-wrapper {
    center();
    top: 60%;
    width: 80%;
    height: 80%;
    min-height: 500px;
    min-width: 800px;
    transition: 0.4s;
  }

  &-content {
    center();
  }

  &-header {
    text-align: center;
    font-size: 1.8em;
    margin-bottom: _margin*5;

    h1 {
      color: fontColorSecondary;
      margin: _margin 0;
    }

    p {
      font-size: 1.2em;
    }
  }

  &-form {

    .Form-input {
      width: 60%;
    }

    .Form-input+.Form-input {
      margin-bottom: _margin*5;
    }
  }

}
